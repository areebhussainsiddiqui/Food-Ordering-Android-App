<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/charcol_black"
    android:layout_height="wrap_content"
    android:id="@+id/deals_parent_layout"
    android:orientation="horizontal"
android:layout_gravity="center"
    android:gravity="center"
    android:padding="5dp">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/deals_item_image"
        android:layout_width="120dp"
        android:layout_alignParentLeft="true"
        android:layout_height="120dp"
        android:src="@drawable/image1"
        />
    <LinearLayout
        android:layout_toRightOf="@+id/deals_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/deals_itemname"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/item_name"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            />
        <TextView
            android:layout_below="@+id/deals_itemname"
            android:id="@+id/deals_Descript"
            android:paddingTop="10dp"
            android:paddingHorizontal="10dp"
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserrat"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/white"
            android:textSize="15dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_below="@+id/deals_itemname"
                android:paddingTop="10dp"
                android:fontFamily="@font/montserrat"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RS: "
                android:textColor="@color/white"
                android:textSize="15dp"
                />
            <TextView
                android:layout_below="@+id/deals_itemname"
                android:id="@+id/deals_itemprice"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="item price"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"
                android:textSize="15dp"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_below="@+id/deals_itemname"
                android:paddingTop="10dp"
                android:paddingHorizontal="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid till:"
                android:fontFamily="@font/montserrat"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:textSize="15dp"
                />
            <TextView
                android:layout_below="@+id/deals_itemname"
                android:id="@+id/deals_expiry_date"
                android:paddingVertical="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry _date"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/white"
                android:textSize="15dp"

                />



        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"

        android:layout_height="4dp"
        android:background="@color/colorPrimary"/>
</RelativeLayout>